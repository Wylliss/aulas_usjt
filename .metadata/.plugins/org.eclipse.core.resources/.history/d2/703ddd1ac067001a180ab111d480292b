package othermethod;

import java.sql.DriverManager;
import com.sun.jdi.connect.spi.Connection;

public class Conexao {
		
	private Connection con;
	
	Conexao (){
			
			
		try { 
			Class.forName("com.mysql.cj.jdbc.Driver");
			con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost/aulasusjt?user=alunos&password=alunos&useTimezone=true&serverTimezone=UTC");
			System.out.println("Conexão realizada com sucesso!!!");
					
		} catch (Exception e) {
			e.printStackTrace();
		}
		
	
	}
}
